extends ../layout 

block content 
    a.btn.btn-success(href='/bicicletas/create') Nueva bicicleta
    table.table 
        thead 
            tr 
                th(scope='col') ID
                th(scope='col') COLOR
                th(scope='col') MODELO
                th(scope='col') UBICACIÃ“N 
                th(scope='col') 
        tbody 
            each bici in bicis 
                tr 
                    td(scope='row')= bici.id 
                    td= bici.color 
                    td= bici.modelo 
                    td= bici.ubicacion 
                    td
                        a.btn(href="/bicicletas/update/" + bici.id) Editar
                    td
                        form.inline(method='post' action='bicicletas/delete/' + bici.id)
                            input(type="hidden" name="id" value = bici.id)
                            button.link-button(type="submit" class='btn' name='submit_param' value='submit_value' )= 'Eliminar'
