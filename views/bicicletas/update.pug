extends ../layout

block content 
    a.btn.btn-danger(href='/bicicletas') Volver 

    br
    br
    br
    h1 Actualizando Bicicleta 
    br
    br

    form(action=`/bicicletas/update/${bici.id}` method='post')
        .form-group 
            label(for="id") ID:
            input#id.form-control(type="text" name="id" value=bici.id)
            br 
        .form-group
            label(for="color") COLOR:
            input#color.form-control(type="text" name="color" value=bici.color)
            br 
        .form-group
            label(for="modelo") MODELO:
            input#modelo.form-control(type="text" name="modelo" value=bici.modelo)
            br 
        .form-group
            label(for="lat") LATITUD:
            input#modelo.form-control(type="text" name="lat" value=bici.ubicacion[0])
            br 
        .form-group
            label(for="lng") LONGITUD:
            input#modelo.form-control(type="text" name="lng" value=bici.ubicacion[1])
            br
            br
        input.btn.btn-primary(type="submit" value="OK")